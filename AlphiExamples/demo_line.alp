WHILE TRUE BEGIN

  BY IS COMMAND SENSORL STOP
  BZ IS COMMAND SENSORR STOP

  IF BY AND BZ BEGIN
    COMMAND MOTORL 70 STOP
    COMMAND MOTORR 70 STOP
  END

  IF BY AND NOT OPEN BZ CLOSE BEGIN
      COMMAND MOTORL 0 STOP
      COMMAND MOTORR 80 STOP
  END

  IF BZ AND NOT OPEN BY CLOSE BEGIN
      COMMAND MOTORL 80 STOP
      COMMAND MOTORR 0 STOP
  END

  IF NOT OPEN BZ OR BY CLOSE BEGIN
    COMMAND MOTORL 0 SUB 60 STOP
    COMMAND MOTORR 0 SUB 60 STOP
  END
  
END
